{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,

    "paths": {
      "@modules/*": ["src/modules/*"],
      "@dto": ["src/dto"],
      "@entities": ["src/entities"],
    },
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".docker"
  ]
}